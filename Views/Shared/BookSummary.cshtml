@model Book

<!--Nicholas Applegate, 1-3-->
<!--Display books in list format-->

<div>
    <h4>@Model.Title</h4>
    <p>Author: @Model.AuthorFirstName @Model.AuthorMiddleName @Model.AuthorLastName</p>
    <p>Publisher: @Model.Publisher</p>
    <p>ISBN: @Model.ISBN</p>
    <p>Classification: @Model.Classification</p>
    <p>Category: @Model.Category</p>
    <p>Price: @Model.Price</p>
    <p>Number of Pages: @Model.NumberOfPages</p>

    <!--Create form for addings books to cart-->

    <form id="@Model.BookId" asp-page="/Shop" method="post">
        <input type="hidden" asp-for="BookId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span>
            @Model.Title
            <button type="submit">
                Add to Cart
            </button>
        </span>
    </form>
</div>